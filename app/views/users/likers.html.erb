<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
<%= @user.name %>
</h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="
<%= gravatar_url(@user, { size: 500 }) %>
" alt="">
      </div>
    </div>
    
<%= render 'favorites/favo_button', micropost: @micropost %>

  </aside>
  <div class="col-xs-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="
<%= 'active' if current_page?(micropost_path(@micropost)) %>
">
<%= link_to user_path(@micropost) do %>
Microposts <span class="badge">
<%= @count_users %>
</span>
<% end %>
</li>
      <li class="
<%= 'active' if current_page?(likes_micropost_path(@micropost)) %>
">
<%= link_to likes_micropost_path(@micropost) do %>
Favos <span class="badge">
<%= @count_likes %>
</span>
<% end %>
</li>
      <li class="
<%= 'active' if current_page?(likers_user_path(@user)) %>
">
<%= link_to likers_user_path(@user) do %>
Likers <span class="badge">
<%= @count_likers %>
</span>
<% end %>
</li>
    </ul>
    
<%= render 'users', users: @likers %>

  </div>
</div>